# TerraFusion Enterprise Environment Configuration
# Copy to .env and configure with your actual values

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://username:password@localhost:5432/terrafusion_db
PGPORT=5432
PGUSER=terrafusion_user
PGPASSWORD=your_secure_password
PGDATABASE=terrafusion_db
PGHOST=localhost

# ===== AUTHENTICATION & SECURITY =====
SESSION_SECRET=your_very_long_secure_session_secret_here_minimum_32_chars
JWT_SECRET=your_jwt_secret_key_here_minimum_32_chars
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===== SSL CONFIGURATION =====
SSL_CERT_PATH=nginx/ssl/cert.pem
SSL_KEY_PATH=nginx/ssl/key.pem
ENABLE_SSL=true

# ===== AI SERVICES =====
OPENAI_API_KEY=sk-your_openai_api_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# ===== DEPLOYMENT CONFIGURATION =====
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
DOMAIN=your-domain.com

# ===== ENTERPRISE FEATURES =====
ENABLE_ENTERPRISE_AUTH=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ENTERPRISE_ANALYTICS=true

# ===== EXTERNAL INTEGRATIONS =====
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# ===== MONITORING & LOGGING =====
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# ===== REDIS CONFIGURATION (Optional) =====
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false

# ===== EMAIL CONFIGURATION (Optional) =====
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@your-domain.com

# ===== BACKUP CONFIGURATION =====
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=terrafusion-backups