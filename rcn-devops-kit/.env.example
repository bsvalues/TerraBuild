# RCN Valuation Engine Environment Configuration
# Copy this file to .env and fill in appropriate values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/terrabuild
DATABASE_SSL=false

# API Configuration
PORT=8000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Authentication
API_KEY=your_secure_api_key_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Cost Data Configuration
COST_DATA_SOURCE=BENTON_COUNTY_2025
COST_MATRIX_PATH=./data/cost_matrix_2025.json
FORCE_MATRIX_RELOAD=false

# Regional Data
DEFAULT_LOCALITY_INDEX=1.0
REGION_CONFIG_PATH=./data/regions.json

# Depreciation Rules
MAX_DEPRECIATION_PCT=60
DEPRECIATION_RATE_PCT_PER_YEAR=0.5

# Performance Tuning
CACHE_TTL_SECONDS=3600
BATCH_SIZE_LIMIT=100
CLUSTER_WORKERS=1

# Monitoring
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
SENTRY_DSN=

# Feature Flags
ENABLE_BATCH_ENDPOINT=true
ENABLE_FACTORS_ENDPOINT=true
ENABLE_DETAILED_LOGGING=true