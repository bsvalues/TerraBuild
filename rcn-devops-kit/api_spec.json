{
  "openapi": "3.0.0",
  "info": {
    "title": "RCN Valuation Engine API",
    "description": "API for calculating Replacement Cost New (RCN) values for property valuation",
    "version": "1.0.0",
    "contact": {
      "name": "TerraBuild Support",
      "email": "support@terrabuild.com",
      "url": "https://terrabuild.com/support"
    }
  },
  "servers": [
    {
      "url": "https://api.terrabuild.com/v1",
      "description": "Production server"
    },
    {
      "url": "https://staging-api.terrabuild.com/v1",
      "description": "Staging server"
    },
    {
      "url": "http://localhost:8000/v1",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/rcn/calculate": {
      "post": {
        "summary": "Calculate RCN value",
        "description": "Calculate the Replacement Cost New (RCN) value for a building based on its specifications",
        "operationId": "calculateRcn",
        "tags": ["RCN"],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RCNInput"
              },
              "example": {
                "use_type": "Residential",
                "construction_type": "Wood Frame",
                "sqft": 2000,
                "year_built": 2005,
                "quality_class": "B",
                "locality_index": 1.1,
                "condition": "Average"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful calculation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RCNOutput"
                },
                "example": {
                  "base_cost": 220000.0,
                  "adjusted_rcn": 242000.0,
                  "depreciated_rcn": 181500.0,
                  "depreciation_pct": 25.0
                }
              }
            }
          },
          "400": {
            "description": "Invalid input parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Invalid parameters",
                  "detail": "Parameter 'sqft' must be a positive number"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Unauthorized",
                  "detail": "Invalid API key"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Server error",
                  "detail": "An unexpected error occurred while processing your request"
                }
              }
            }
          }
        }
      }
    },
    "/rcn/batch-calculate": {
      "post": {
        "summary": "Batch calculate RCN values",
        "description": "Calculate RCN values for multiple buildings in a single request",
        "operationId": "batchCalculateRcn",
        "tags": ["RCN"],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/RCNInput"
                },
                "maxItems": 100
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful batch calculation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RCNOutput"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "413": {
            "description": "Payload too large - exceeded maximum batch size",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Payload too large",
                  "detail": "Batch requests are limited to 100 items"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/rcn/factors": {
      "get": {
        "summary": "Get cost factors",
        "description": "Retrieve the current cost factors used in RCN calculations",
        "operationId": "getCostFactors",
        "tags": ["RCN"],
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "parameters": [
          {
            "name": "region",
            "in": "query",
            "description": "Filter factors by region code",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "building_type",
            "in": "query",
            "description": "Filter factors by building type",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved cost factors",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "locality_factors": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "number"
                      }
                    },
                    "quality_factors": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "number"
                      }
                    },
                    "condition_factors": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "number"
                      }
                    },
                    "base_rates": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "number"
                      }
                    }
                  }
                },
                "example": {
                  "locality_factors": {
                    "WEST_BENTON": 1.05,
                    "CENTRAL_BENTON": 1.0,
                    "EAST_BENTON": 0.95
                  },
                  "quality_factors": {
                    "A": 1.3,
                    "B": 1.0,
                    "C": 0.8,
                    "D": 0.6,
                    "E": 0.4
                  },
                  "condition_factors": {
                    "Excellent": 1.0,
                    "Good": 0.9,
                    "Average": 0.75,
                    "Fair": 0.6,
                    "Poor": 0.4
                  },
                  "base_rates": {
                    "Residential_WoodFrame": 110,
                    "Residential_Masonry": 140,
                    "Commercial_Office": 160,
                    "Commercial_Retail": 120,
                    "Industrial_Warehouse": 95
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RCNInput": {
        "type": "object",
        "required": [
          "use_type",
          "construction_type",
          "sqft",
          "year_built"
        ],
        "properties": {
          "use_type": {
            "type": "string",
            "description": "Building use type",
            "example": "Residential"
          },
          "construction_type": {
            "type": "string",
            "description": "Construction method/materials",
            "example": "Wood Frame"
          },
          "sqft": {
            "type": "number",
            "description": "Building size in square feet",
            "format": "float",
            "minimum": 0,
            "example": 2000
          },
          "year_built": {
            "type": "integer",
            "description": "Year of construction",
            "minimum": 1800,
            "maximum": 2100,
            "example": 2005
          },
          "quality_class": {
            "type": "string",
            "description": "Quality class (A, B, C, D, E)",
            "enum": ["A", "B", "C", "D", "E"],
            "default": "B",
            "example": "B"
          },
          "locality_index": {
            "type": "number",
            "description": "Regional cost adjustment factor",
            "format": "float",
            "minimum": 0.5,
            "maximum": 2.0,
            "default": 1.0,
            "example": 1.1
          },
          "condition": {
            "type": "string",
            "description": "Building condition",
            "enum": ["Excellent", "Good", "Average", "Fair", "Poor"],
            "default": "Average",
            "example": "Average"
          }
        }
      },
      "RCNOutput": {
        "type": "object",
        "properties": {
          "base_cost": {
            "type": "number",
            "description": "Base cost before adjustments",
            "format": "float",
            "example": 220000.0
          },
          "adjusted_rcn": {
            "type": "number",
            "description": "Adjusted replacement cost new (with quality & locality)",
            "format": "float",
            "example": 242000.0
          },
          "depreciated_rcn": {
            "type": "number",
            "description": "Cost after depreciation",
            "format": "float",
            "example": 181500.0
          },
          "depreciation_pct": {
            "type": "number",
            "description": "Total depreciation percentage applied",
            "format": "float",
            "minimum": 0,
            "maximum": 100,
            "example": 25.0
          }
        },
        "required": [
          "base_cost",
          "adjusted_rcn",
          "depreciated_rcn",
          "depreciation_pct"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error type"
          },
          "detail": {
            "type": "string",
            "description": "Detailed error message"
          }
        },
        "required": ["error"]
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  }
}